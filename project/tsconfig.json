{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist/",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts", "src/**/*.tsx", "lib/**/*.ts", "lib/**/*.tsx", "lib/**/*.js"
    ]
}